{
  "name": "js-playground",
  "description": "A JavaScript code playground",
  "license": "MIT",
  "author": "Zill Ding",
  "homepage": "https://zillding.github.io/js-playground",
  "repository": {
    "type": "git",
    "url": "https://github.com/zillding/js-playground.git"
  },
  "version": "0.1.0",
  "scripts": {
    "build": "react-scripts build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "prettier": "^1.17.1",
    "react": "^16.8.6",
    "react-ace": "^7.0.0",
    "react-dom": "^16.8.6",
    "react-modal": "^3.8.1",
    "react-scripts": "^3.0.1",
    "react-toastify": "^5.1.1",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier-package-json": "^2.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
