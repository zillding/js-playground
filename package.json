{
  "name": "js-playground",
  "description": "A JavaScript code playground",
  "license": "MIT",
  "author": "Zill Ding",
  "homepage": "https://zillding.github.io/js-playground",
  "repository": {
    "type": "git",
    "url": "https://github.com/zillding/js-playground.git"
  },
  "version": "0.1.0",
  "scripts": {
    "build": "react-scripts build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "dependencies": {
    "keycode": "^2.2.0",
    "lodash": "^4.17.21",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-ace": "^9.4.1",
    "react-dom": "^17.0.2",
    "react-modal": "^3.14.3",
    "react-scripts": "^4.0.3",
    "react-toastify": "^7.0.4",
    "react-virtualized-auto-sizer": "^1.0.6",
    "react-window": "^1.8.6",
    "use-debounce": "^6.0.1",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "gh-pages": "^3.1.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier-package-json": "^2.1.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
