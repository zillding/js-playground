{
  "name": "js-playground",
  "description": "A JavaScript code playground",
  "license": "MIT",
  "author": "Zill Ding",
  "repository": {
    "type": "git",
    "url": "https://github.com/zillding/js-playground.git"
  },
  "version": "0.1.0",
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-notification-system": "^0.2.6",
    "react-redux": "^7.0.3",
    "react-scripts": "^3.0.1",
    "react-toggle": "^4.0.2",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "prettier-package-json": "^2.1.0",
    "redux-devtools-extension": "^2.13.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
